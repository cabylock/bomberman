<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="core.system.controller.base.ModeController"
      alignment="CENTER"
      spacing="30"
      prefWidth="800"
      prefHeight="600">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Text text="Game Mode"
          fill="BLACK"
          style="-fx-font-size: 48px; -fx-font-weight: bold;">
    </Text>
    
    <Text fx:id="playerModeText" 
          text="1 Player Mode"
          fill="#ffcc00"
          style="-fx-font-size: 24px;">
    </Text>

    <VBox spacing="15" alignment="CENTER">
        <Button text="Show Available Maps" 
               onAction="#showAvailableMaps"
               prefWidth="300"
               prefHeight="60"
         />
               
               
        <Button text="Create Random Map" 
               onAction="#createRandomMap"
               prefWidth="300"
               prefHeight="60"
         />
               
               
        <Button text="Back" 
               onAction="#goBack"
               prefWidth="300"
               prefHeight="60"
         />
               
    </VBox>
    
    
</VBox>
