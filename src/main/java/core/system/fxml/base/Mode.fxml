<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="core.system.controller.base.ModeController"
      alignment="CENTER"
      spacing="30"
      prefWidth="800"
      prefHeight="600">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Select Game Mode"
          fill="BLACK"
          style="-fx-font-size: 40px; -fx-font-weight: bold;">
    </Text>

    <HBox alignment="CENTER" spacing="50">
        <VBox alignment="CENTER" spacing="15" styleClass="mode-card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Single Player" 
                  style="-fx-font-size: 24px; -fx-text-fill: black;"/>
            <Button text="Select" 
                   onAction="#selectSinglePlayerMode"
                   prefWidth="150"
                   prefHeight="40"
                   style="-fx-font-size: 16px;"/>
        </VBox>

        <VBox alignment="CENTER" spacing="15" styleClass="mode-card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Multi Players" 
                  style="-fx-font-size: 24px; -fx-text-fill: black;"/>
            <Button text="Select" 
                   onAction="#selectMultiPlayerMode"
                   prefWidth="150"
                   prefHeight="40"
                   style="-fx-font-size: 16px;"/>
        </VBox>
        
        <VBox alignment="CENTER" spacing="15" styleClass="mode-card">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Online Mode" 
                  style="-fx-font-size: 24px; -fx-text-fill: black;"/>
            <Button text="Select" 
                   onAction="#selectOnlineMode"
                   prefWidth="150"
                   prefHeight="40"
                   style="-fx-font-size: 16px;"/>
        </VBox>
    </HBox>

    <Button text="Back" 
               onAction="#goBack"
               prefWidth="300"
               prefHeight="60"
         />
</VBox>
