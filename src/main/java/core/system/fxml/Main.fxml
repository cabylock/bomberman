<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="core.system.controller.MainMenuController"
      >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <Text text="BOMBERMAN" fx:id="titleText">
        <font>
            <Font name="Arial" size="48" />
        </font>
    </Text>
    
    <Button text="Show Available Maps" prefWidth="200" prefHeight="40" 
            onAction="#showMapSelection"/>
            
    <Button text="Random Map" prefWidth="200" prefHeight="40" 
            onAction="#showRandomMap"/>
            
    <Button text="Exit" prefWidth="200" prefHeight="40" 
            onAction="#exitGame"/>
</VBox>
