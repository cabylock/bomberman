<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="pauseMenuRoot" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="300.0" prefWidth="250.0" spacing="15.0" style="-fx-background-color: rgba(0,0,0,0.8); -fx-background-radius: 10;" 
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.system.controller.ingame.PauseMenuController"
      onKeyPressed="#handleKeyPress">
   <children>
      <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GAME PAUSED">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Text>
      <Button fx:id="resumeButton" mnemonicParsing="false" onAction="#handleResume" prefHeight="40.0" prefWidth="200.0" 
              text="Resume" textFill="BLACK">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="muteButton" mnemonicParsing="false" onAction="#handleMute" prefHeight="40.0" prefWidth="200.0" 
              text="Mute Sound" textFill="BLACK">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="restartButton" mnemonicParsing="false" onAction="#handleRestart" prefHeight="40.0" prefWidth="200.0" 
              text="Restart Level" textFill="BLACK">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>

      <Button fx:id="nextLevelButton" mnemonicParsing="false" onAction="#handleNextLevel" prefHeight="40.0" prefWidth="200.0" 
              text="Next Level" textFill="BLACK">">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>


      <Button fx:id="menuButton" mnemonicParsing="false" onAction="#handleReturnToMenu" prefHeight="40.0" prefWidth="200.0" 
              text="Return to Menu" textFill="BLACK">">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefHeight="40.0" prefWidth="200.0" 
              text="Exit Game" textFill="BLACK">">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
